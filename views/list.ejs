<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>
    <div class="box" id="heading">
        <h1>
            <%= kindOfDay %>
        </h1>

    </div>
    <div class="box">
        <% for (var i=0; i <newTodo.length; i++){ %>
        <div class="item">
            <input type="checkbox" name="checkbox">
            <p>
                <%= newTodo[i] %>
            </p>
        </div>
        <% } %>





        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit">+</button>
        </form>
        <form class="item" action="delete" method="post" style="display:inline">
            <input type="hidden" name="removItem" value="<%= removItem %>">
            <button type="submit" id="rembtn">-</button>
        </form>
    </div>

    <footer>
        <p class="foot">&copy; 2023 Abdulrahman Sharaf</p>

        <div class="social-icons icon-box">
            <a href="http://github.com/olasharaff"><i class='bx bxl-github bx-md' style='color:#3ac89e'></i></a>
            <a href="http://www.linkedin.com/in/sharaf-abdulrahman-70431b101/"><i class='bx bxl-linkedin bx-md'
                    style="color: #3e9b6a"></i></a>
            <a href="http://twitter.com/olasharaff"> <i class='bx bxl-twitter bx-md'
                    style="color: #3ac89e"></i></a>

        </div>
    </footer>

</body>

</html>
